@model ProjectPortfolio.Models.Project

<h2>Project Details</h2>

<div>
    <h4>Title</h4>
    <p>@Model.Title</p>

    <h4>Description</h4>
    <p>@Model.Description</p>

    <h4>Project URL</h4>
    <p>@Model.ProjectUrl</p>

    <h4>Image URL</h4>
    <p>@Model.ImageUrl</p>

    <h4>Date Created</h4>
    <p>@Model.DateCreated.ToShortDateString()</p>

    <h4>Skills</h4>
    <ul>
        @if (Model.ProjectSkills != null && Model.ProjectSkills.Any())
        {
            foreach (var skill in Model.ProjectSkills)
            {
                <li>@skill.Skill.Name</li>
            }
        }
        else
        {
            <li>No skills associated.</li>
        }
    </ul>

    <h4>Categories</h4>
    <ul>
        @if (Model.ProjectCategories != null && Model.ProjectCategories.Any())
        {
            foreach (var category in Model.ProjectCategories)
            {
                <li>@category.Category.Name</li>
            }
        }
        else
        {
            <li>No categories associated.</li>
        }
    </ul>
</div>

<p>
    <a asp-action="Edit" asp-route-id="@Model.ProjectId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</p>

@{
    ViewData["Title"] = "Portfolio";
}

<div id="container"></div>

<!-- Include Three.js from CDN -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/three.js/r128/three.min.js" defer></script>

<!-- Include OrbitControls from the CDN -->
<script src="https://cdn.jsdelivr.net/npm/three@0.128.0/examples/js/controls/OrbitControls.js" defer></script>

<!-- Include Buffer Geometry Util From the CDN -->
<script src="https://cdn.jsdelivr.net/gh/mrdoob/three.js@r128/examples/js/utils/BufferGeometryUtils.js" defer></script>

<script src="~/js/Loaders/GLTFLoader.js" defer></script>

<!-- Link to your custom Three.js script -->
<script src="~/js/portfolio.js" defer></script>

<div id="projectModal" class="modal" style="display:none;">
    <div class="modal-content">
        <span class="close">&times;</span>
        <h2 id="projectTitle"></h2>
        <p id="projectDescription"></p>
    </div>
</div>

<!-- Include CSS for the modal -->
<style>
    .modal {
        display: none;
        position: fixed;
        z-index: 1;
        left: 0;
        top: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0, 0, 0, 0.5);
    }

    .modal-content {
        background-color: white;
        margin: 15% auto;
        padding: 20px;
        width: 50%;
        border-radius: 10px;
    }

    .close {
        color: red;
        float: right;
        font-size: 28px;
        font-weight: bold;
        cursor: pointer;
    }

    body, html {
        margin: 0;
        padding: 0;
        overflow: hidden; /* Disable scrolling */
        height: 100%; /* Ensure the body covers the whole screen */
        width: 100%; /* Ensure the body covers the whole screen */
    }

    #portfolioContainer {
        position: absolute;
        top: 0;
        left: 0;
        width: 100vw; /* Full width */
        height: 100vh; /* Full height */
        overflow: hidden; /* No overflow */
    }
</style>

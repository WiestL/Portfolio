@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container mt-5">
    <h1 class="text-center">Admin Dashboard</h1>
    <hr />

    <div class="row text-center mt-4">
        <!-- Projects Analytics -->
        <div class="col-md-3">
            <div class="card bg-light mb-3">
                <div class="card-body">
                    <h5 class="card-title">Total Projects</h5>
                    <p class="display-4">@ViewData["ProjectCount"]</p>
                </div>
            </div>
        </div>

        <!-- Reviews Analytics -->
        <div class="col-md-3">
            <div class="card bg-light mb-3">
                <div class="card-body">
                    <h5 class="card-title">Total Reviews</h5>
                    <p class="display-4">@ViewData["ReviewCount"]</p>
                </div>
            </div>
        </div>

        <!-- Skills Analytics -->
        <div class="col-md-3">
            <div class="card bg-light mb-3">
                <div class="card-body">
                    <h5 class="card-title">Total Skills</h5>
                    <p class="display-4">@ViewData["SkillCount"]</p>
                </div>
            </div>
        </div>

        <!-- Categories Analytics -->
        <div class="col-md-3">
            <div class="card bg-light mb-3">
                <div class="card-body">
                    <h5 class="card-title">Total Categories</h5>
                    <p class="display-4">@ViewData["CategoryCount"]</p>
                </div>
            </div>
        </div>
    </div>
</div>
